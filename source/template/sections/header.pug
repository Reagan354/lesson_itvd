header.header
    .header__top
        .container
            .contacts
                a.contacts(href="tel:+380609999")
                    i.fa.fa-mobile.contact__icon(aria-hidden="true")
                    span.contact__text 6337 3128

                a.contact(href="mailto:info@business.com")
                    i.fa.fa-envelope-o.contact__icon.contact__icon--email(aria-hidden="true")
                    span.contact__text info@business.com

                a.facebook-icon.contact__icon(href="facebook.com")
                    i.fa.fa-facebook-square(aria-hidden="true")
    .header__bottom
        .container_2
            .logo: img.logo__pucture(src="images/logo.png" alt="picture")
            nav.nav
                - var items = ['Home', 'About Us', 'Our Aprouch', 'Our Works']
                each item in items
                    if item === 'Home'
                        a.nav__link.nav__link--active(href="#")= item
                    else
                        a.nav__link(href="#")= item
            a.button.header__button.button--red(href="#") Free consultation






































